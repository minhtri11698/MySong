<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:text="TOP 100"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="#B976EC"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/textviewtitleplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/listviewplaylist"
        android:layout_below="@id/textviewtitleplaylist">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewplaylist"
        android:background="#CCCCCC"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/viewmoreicon"
            android:scaleType="fitXY"
            android:src="@drawable/more"
            android:layout_marginStart="20dp">
        </ImageView>
        <TextView
            android:text="Xem them"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingBottom="3dp"
            android:textColor="#182"
            android:layout_marginEnd="20dp"
            android:id="@+id/textviewmoreplaylist">
        </TextView>
    </RelativeLayout>

</RelativeLayout>